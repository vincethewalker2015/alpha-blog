<h1>All Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
   <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td> 
      <td><%= article.description %></td>
      <td>
        <%= link_to "Show", article_path(article) %>
        <%= link_to "Edit", edit_article_path(article) %>
        <%= link_to "Destroy","#" %>
      </td>
    </tr>
     <% end %>
  </tbody>
</table>






