
  <div class="show-panel">
  <div class="card show-card">
  <h1 class="text-center mt-4 object-color"><%= @user.username %> </h1>
    <p class="grav-user"><%=  gravatar_for @user, size: 200%></p>
    <h4 class="text-center mt-4 object-color-orange"><%= @user.email %></h4>
    <div class="text-center mt-2">
      <%= link_to "Home Page", root_path, class: "btn btn btn-outline-* show-button" %> 
      <%= link_to "All Users", users_path, class: "btn btn btn-outline-* show-button" %> 
      <%= link_to "Edit User", edit_user_path(@user), class: "btn btn btn-outline-* show-button" %> 
      <%= link_to "Delete User", user_path(@user), class: "btn btn btn-outline-* show-button", method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
     <h3 class="text-center mt-4 object-color-orange">Articles:</h3>
     <%= render "articles/listing", obj: @user.articles%>
    
  </div>
</div>

